{
  "name": "sheetflow",
  "version": "1.0.0",
  "description": "Convert large Excel files (200MB+) to CSV with ease",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "node tests/security.test.js",
    "test:jest": "jest",
    "build": "electron-builder",
    "lint": "eslint . --ext .js",
    "format": "prettier --write ."
  },
  "keywords": [
    "excel",
    "csv",
    "converter",
    "electron"
  ],
  "author": "Khoa Tran<khoatran.geek@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "electron": "^22.0.0",
    "xlsx": "^0.18.0"
  },
  "optionalDependencies": {
    "exceljs": "^4.3.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "build": {
    "appId": "com.sheetflow.app",
    "productName": "SheetFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "renderer.js",
      "python_converter.py",
      "lib/**/*",
      "tests/**/*",
      "app_icon.png"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"]
  }
}
